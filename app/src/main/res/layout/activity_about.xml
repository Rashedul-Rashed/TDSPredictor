<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_about"
    tools:context=".AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ccc"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="About App"
        android:layout_margin="5dp"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#ccc"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="App Version 0.0.1"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="A TDS meter is a small hand-held device used to indicate the Total Dissolved Solids in a solution,usually water.Since dissolved ionized solids,such as salts and minerals,increase the conductivity of a solution,a TDS meter measures the conductivity of the solution and estimates the TDS from that reading."
        android:textColor="#ccc"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#ccc"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="This App takes the value from the tester and Compare with the ranges of TDS Chart to say your sample water is drinkable or not."
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developers Info"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textColor="#ccc"
        android:textSize="25sp"
        android:onClick="goToDev"
        android:background="@color/black"
        />


</LinearLayout>